<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tabular.tabular.dao.UserDao">
    <insert id="createUser">
        INSERT ignore INTO
            user (username, password, role, status)
        VALUES
            (#{username}, #{password}, #{role}, #{status})
    </insert>

    <select id="queryUserById" parameterType="long" resultType="User">
        SELECT
            *
        FROM
            user
        WHERE
            user_id = #{userId}
    </select>

    <select id="queryUserByUsername" parameterType="String" resultType="User">
        SELECT
            *
        FROM
            user
        WHERE
            username = #{username}
    </select>

    <select id="queryUserByRole" parameterType="int" resultType="User">
        SELECT
            *
        FROM
            user
        WHERE
            role = #{role}
    </select>

    <select id="queryUserByStatus" parameterType="int" resultType="User">
        SELECT
            *
        FROM
            user
        WHERE
            status = #{status}
    </select>

    <select id="queryAll" resultType="User">
        SELECT
            *
        FROM
            user
    </select>

    <update id="modifyUsername">
        UPDATE user
        SET username=#{username}
        WHERE user_id = #{userId}
    </update>

    <update id="modifyUserPassword">
        UPDATE user
        SET password=#{password}
        WHERE user_id = #{userId}
    </update>

    <update id="modifyUserRole">
        UPDATE user
        SET role=#{role}
        WHERE user_id = #{userId}
    </update>

    <update id="modifyUserStatus">
        UPDATE user
        SET status=#{status}
        WHERE user_id = #{userId}
    </update>

    <delete id="deleteUserById" parameterType="long" >
        DELETE FROM user
        WHERE user_id = #{userId}
    </delete>

    <delete id="deleteUserByName" parameterType="String" >
        DELETE FROM user
        WHERE username = #{username}
    </delete>
</mapper>