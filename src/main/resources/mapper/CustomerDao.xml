<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soecode.lyf.dao.CustomerDao">
    <select id="queryById" resultType="Customer" parameterType="long">
        <!-- 具体的sql -->
        SELECT
        book_id,
        name,
        number
        FROM
        book
        WHERE
        book_id = #{bookId}
    </select>

    <select id="queryAll" resultType="Customer">
        SELECT
        book_id,
        name,
        number
        FROM
        book
        ORDER BY
        book_id
        LIMIT #{offset}, #{limit}
    </select>
</mapper>