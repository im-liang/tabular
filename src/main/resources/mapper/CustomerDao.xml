<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tabular.tabular.dao.CustomerDao">
    <select id="queryById" resultType="Customer" parameterType="long">
        SELECT
          book_id, name, number
        FROM
          customer
        WHERE
          book_id = #{bookId}
    </select>

    <select id="queryAll" resultType="Customer">
        SELECT
          book_id, name, number
        FROM
          customer
        ORDER BY
          book_id
        LIMIT #{offset}, #{limit}
    </select>
</mapper>